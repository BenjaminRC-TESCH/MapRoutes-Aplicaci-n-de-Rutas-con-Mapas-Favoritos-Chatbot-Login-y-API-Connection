<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--Se activa cone el boton changeProfile-->
    <androidx.cardview.widget.CardView
        android:id="@+id/update_profile_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="100dp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:id="@+id/name_profile_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOMBRE"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name_profile_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:text=""
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/email_profile_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/email_profile_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                android:text=""
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/password_profile_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PASSWORD"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/password_profile_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:text=""
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/direction_profile_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DIRECCIÓN"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/direction_profile_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:text=""
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/phone_profile_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TELÉFONO"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/phone_profile_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="number"
                android:text=""
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/updateProfile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Guardar"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/purple"
                app:cornerRadius = "20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <Button
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Cancelar"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/purple"
                app:cornerRadius = "20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>